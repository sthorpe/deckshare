<div style="padding:30px;">
  <div class="row">
    <div class="col-md-2">
      <p id="notice"><%= notice %></p>
      <div style="float:right;">
      </div>
    </div>
    <div class="col-md-7">
      <div style="padding:5px;">
        <h1>Shares</h1>
      </div>

      <table class="pt-table pt-interactive">
        <thead>
          <tr>
            <th>Share Url</th>
            <th>Visits</th>
            <th>Deck</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @shares.each do |share| %>
            <tr>
              <td>http://www.dogo.com/<%= share.url %></td>
              <td><%= share.visits %></td>
              <td><%= share.deck.name %></td>
              <td><%= share.email %></td>
              <td><a href="/shares/<%= share.id %>" title="Show"><span class="pt-icon-standard pt-icon-document-open"></span></a></td>
              <td><a href="/shares/<%= share.id %>/edit" title="Edit"><span class="pt-icon-standard pt-icon-edit"></span></a></td>
              <td><%= link_to raw('<span class="pt-icon-standard pt-icon-trash"></span>'), share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    </div>
    <div class="col-md-2">
      <%= link_to 'Invite', new_share_path, class: 'pt-button pt-icon-people pt-intent-primary' %>
    </div>
  </div>
</div>
