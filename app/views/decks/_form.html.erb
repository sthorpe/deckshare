<div class="newDeck">
<%= form_for deck, url: decks_path, html: { multipart: true, remote: true } do |f| %>
  <% if deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deck.errors.count, "error") %> prohibited this deck from being saved:</h2>
      <ul>
      <% deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'pt-input' %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'pt-input' %>
  </div>


  <div class="field">
    <%= f.label :document %><br />
    <%= f.file_field :document, id: 'deckAttachment' %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <br />
  <br />

  <div class="actions">
    <%= f.submit(class: 'pt-button pt-icon-add pt-intent-success', style: 'width:100px;') %>
  </div>
<% end %>
</div>
